<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Profile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goBackIconLoginPage"
            android:layout_width="45dp"
            android:layout_height="200dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/viewimage"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/img" />

    </LinearLayout>
    <TextView
        android:layout_width="389dp"
        android:layout_height="147dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text=" Enter your email and password"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="50dp"
        app:cardCornerRadius="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint=" Your Email"
            android:padding="20dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:hint="Password"
            android:padding="20dp"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_page_password"
        android:layout_marginTop="500dp"
        android:textColor="@color/blue_main"
        android:textSize="23dp"
        android:gravity="left"
        android:layout_marginLeft="50dp"
        />

    <Button
        android:id="@+id/login_page_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/blue_round_corner_button"
        android:backgroundTint="@color/blue_main"
        android:text="Login"
        android:textColor="@color/white" />

</RelativeLayout>