<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Profile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="200dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/img" />

    </LinearLayout>
    <ImageView
        android:layout_marginLeft="0dp"
        android:layout_marginTop="75dp"
        android:id="@+id/returnimage"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/return_img" />

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        android:text=" Coming back as well ?"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="339dp"
        android:text=" Publish Your Return Trip now!"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="450dp"
            android:text=" Yeah Sure !"
            android:textColor="@color/black"
            android:textSize="25dp"
            />

        <ImageView
            android:id="@+id/next_icon"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/next_icon" />

    </LinearLayout>
    <View
        android:layout_width="550dp"
        android:layout_height="1dp"
        android:layout_marginTop="510dp"
        android:background="@color/grey_for_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="550dp"
            android:text=" No Thanks !"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/publish_next"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/next_icon" />

    </LinearLayout>
</RelativeLayout>