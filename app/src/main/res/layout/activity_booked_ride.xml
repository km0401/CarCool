    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="775dp"
        app:menu="@menu/bottom_nav_menu" />




</RelativeLayout>